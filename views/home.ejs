    <div class="search-container " id="search-container">
        
        <form action="/action_page.php" >
          <input type="text" class="search" placeholder="Search.." name="search" size="70" width="40px">
          <button type="submit"><i class="fa fa-search"></i>Search</button>
          <br>
          <label for="qual">Quality:</label>
          <select name="Quality" id="qual">
            <option value="all" >All</option>
            <option value="480" >480px</option>
            <option value="720" >720px</option>
            <option value="HD" >HD</option>
          </select>
          <label for="rate">Rating:</label>
          <select name='rating' id="rate">
            <option value="4.5" >4.5+</option>
            <option value="4.0" default>4.0+</option>
            <option value="3.5" >3.5+</option>
            <option value="3.0" >3.0+</option>
          </select>
          <label for="gen">Genre</label>
          <select name="genre" id="gen">
            <option value="action" >action</option>
            <option value="funny" default>Funny</option>
            <option value='horor' >Horor</option>
            <option value="Reality" >Reality</option>
          </select>
        </form>
    </div>
    <% movie.forEach(film => { %>
    <div class="container mt-1">
        <div class="card" style="width:200px">
          <img class="card-img-top" src="../bootstrap4/img_avatar1.png" alt="<%- film.image %>" style="width:100%"><%# movie image url paste here %> 
          <div class="card-body">
            <h4 class="card-title"><%-movie.name%></h4>
            <p class="card-text">Here movie genre is <%- film.genre %> while movie Rating is <%= film.rating %> with <%-film-quality%>  </p>
            <a href="#" class="btn btn-primary">See Profile</a>
          </div>
        </div>
        <% }) %>
